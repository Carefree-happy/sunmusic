/* pages/carousel/index.wxss */
.carouselContainer {
  width: 100%;
  height: 300rpx;
}

.carouselContainer image {
  width: 100%;
  height: 100%;
}

/* 图标导航区 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem text {
  font-size: 26rpx;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx 0;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
}

/* header recommend */
.recommendContainer .recommendHeader .recommendTitle{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .recommendHeader .recommendMore {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.recommendContainer {
  margin: 10rpx;
}

/* content recommend */
.recommendScroll {
  display: flex;
  flex-direction: row;
  margin: 5rpx 10rpx 0;
}

.scrollItem text{
  width: 200rpx;
  margin-right: 20rpx;
  font-size: 26rpx; 
  /* 单行文本溢出 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对其模式 */
  -webkit-line-clamp: 2;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}